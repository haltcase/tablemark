{
	"name": "tablemark",
	"version": "3.1.0",
	"description": "Generate markdown tables from a list of objects or JSON data.",
	"keywords": [
		"markdown",
		"table",
		"tables",
		"json",
		"convert",
		"generate",
		"ghfm",
		"tableify",
		"typescript"
	],
	"homepage": "https://github.com/haltcase/tablemark",
	"bugs": "https://github.com/haltcase/tablemark/issues",
	"repository": "https://github.com/haltcase/tablemark",
	"license": "MIT",
	"author": "Bo Lingen <bo@haltcase.dev> (https://github.com/haltcase)",
	"sideEffects": false,
	"type": "module",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"types": "./dist/index.d.ts"
		}
	},
	"types": "./dist/index.d.ts",
	"files": [
		"dist"
	],
	"scripts": {
		"build": "tsdown",
		"changelog": "changelog",
		"eslint:check": "eslint src tests",
		"format": "oxlint --fix && eslint --fix src tests && prettier --experimental-cli --write src tests",
		"oxlint:check": "oxlint",
		"prepublishOnly": "pnpm test",
		"prettier:check": "prettier --experimental-cli --check src tests",
		"test": "vitest",
		"typescript:check": "tsgo --noEmit"
	},
	"prettier": "@haltcase/style/prettier",
	"dependencies": {
		"sentence-case": "^3.0.4",
		"split-text-to-chunks": "^1.0.0"
	},
	"devDependencies": {
		"@arethetypeswrong/core": "^0.18.2",
		"@citycide/changelog": "^2.0.0",
		"@haltcase/style": "^7.3.1",
		"@types/node": "^24.0.10",
		"@typescript/native-preview": "7.0.0-dev.20250701.1",
		"eslint": "^9.30.1",
		"eslint-plugin-oxlint": "^1.5.0",
		"oxlint": "^1.3.0",
		"prettier": "^3.6.2",
		"tsdown": "^0.12.9",
		"typescript": "^5.8.3",
		"vitest": "3.2.4"
	},
	"packageManager": "pnpm@10.12.4",
	"engines": {
		"node": ">=18"
	},
	"publishConfig": {
		"access": "public"
	},
	"devEngines": {
		"runtime": {
			"name": "node",
			"version": "24",
			"onFail": "error"
		}
	}
}
